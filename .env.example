# Database
# For local development, use your local PostgreSQL database
# For Railway, get this from: Railway Dashboard → Database → Connect → Connection String
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/gcgc_team_management"

# NextAuth Configuration
# For local development, use http://localhost:3000
# For Railway, use your Railway app URL (e.g., https://your-app.up.railway.app)
NEXTAUTH_URL="http://localhost:3000"

# Generate a secure secret with: openssl rand -base64 32
# NEVER commit the real secret to git
NEXTAUTH_SECRET="your-secret-here-generate-with-openssl-rand-base64-32"

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
# Create OAuth 2.0 Client ID with authorized redirect URIs:
#   - http://localhost:3000/api/calendar/google-callback (local)
#   - https://your-railway-app.up.railway.app/api/calendar/google-callback (production)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: Node Environment
NODE_ENV="development"

# TMS Chat URL (external service)
# For staging: https://tms-chat-staging.hotelsogo-ai.com
# For production: https://tms-chat.hotelsogo-ai.com
NEXT_PUBLIC_TMS_CHAT_URL="https://tms-chat-staging.hotelsogo-ai.com"

# Alibaba Cloud OSS Configuration
# Get credentials from: https://ram.console.aliyun.com/users
# Region format: oss-<region-id> (e.g., oss-ap-southeast-6)
OSS_REGION="oss-ap-southeast-6"
OSS_ACCESS_KEY_ID="your-access-key-id"
OSS_ACCESS_KEY_SECRET="your-access-key-secret"
OSS_BUCKET="***REDACTED_OSS_BUCKET***"
# Set to "true" when running on Alibaba Cloud ECS in the same region (saves bandwidth costs)
OSS_USE_INTERNAL="false"

# SMTP Configuration (for password reset emails)
# Using Gmail SMTP with an App Password
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="noreply@globalofficium.com"
SMTP_PASS="your-gmail-app-password"
